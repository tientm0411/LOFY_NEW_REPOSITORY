<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_margin="4dp"
    android:background="@drawable/boder_item"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_item_member_ava"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_margin="2dp"
        android:layout_weight="3"
        android:background="@drawable/boder_item"
        android:src="@drawable/ic_danit" />

    <TextView
        android:id="@+id/tv_item_member_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="9"
        android:text="@string/tv_item_member_nameMember"
        android:textColor="#000A55"
        android:textSize="10sp" />


</LinearLayout>