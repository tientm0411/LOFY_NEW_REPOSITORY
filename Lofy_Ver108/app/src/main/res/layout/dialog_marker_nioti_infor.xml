<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_dg_noti_infor_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:src="@drawable/ic_app_logo"
        />

    <TextView
        android:id="@+id/tv_dg_noti_infor_noti_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_margin="16dp"
        android:textColor="#05395c"
        />
    <TextView
        android:id="@+id/tv_dg_noti_infor_noti_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Member"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_margin="16dp"
        android:textColor="#05395c"
        />
    <TextView
        android:id="@+id/tv_dg_noti_infor_noti_mess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification Mess"
        android:textSize="8sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_margin="16dp"
        android:textColor="#000000"
        />
</LinearLayout>