<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_margin="4dp"
    android:background="@drawable/boder_item"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/item_user_request"
    >
    <ImageView
        android:background="@drawable/boder_item"
        android:layout_margin="2dp"
        android:id="@+id/img_item_request_user_ava"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="70dp"
        android:src="@drawable/ic_danit"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/tv_item_request_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:text="@string/tv_item_user_request_userName"
        android:textSize="20sp"
        android:textColor="#000A55"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:padding="4dp"
        >
        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_item_request_user_accecpt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:background="@drawable/ic_accept"

            />
        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_item_request_user_deny"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:background="@drawable/ic_deny"
            />
    </LinearLayout>
</LinearLayout>