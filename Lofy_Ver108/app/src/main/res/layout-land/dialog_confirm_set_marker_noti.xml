<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:background="@drawable/custom_view_shadow"
    android:orientation="vertical">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_dg_noti_confirm_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_app_logo"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="25%"
            app:layout_marginTopPercent="5%"/>

        <TextView
            android:id="@+id/tv_dg_noti_confirm_noti_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="Notification Name"
            android:textColor="#05395c"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="25%"
            app:layout_marginTopPercent="25%"/>

        <EditText
            android:id="@+id/edt_dg_noti_confirm_mess"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:gravity="center"
            android:hint="Lời nhắn ...."
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="15%"
            app:layout_marginTopPercent="45%"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="25%"
            app:layout_marginTopPercent="60%">

            <Button
                android:id="@+id/btn_dg_noti_confirm_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_home_shape"
                android:text="Huỷ"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/btn_dg_noti_confirm_send"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_home_shape"
                android:text="Gửi"
                android:textAllCaps="false" />

        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>


</LinearLayout>