    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boder_noti_title"
    android:orientation="vertical">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<ImageView-->
