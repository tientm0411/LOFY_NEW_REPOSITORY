<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_margin="4dp"
    android:background="@drawable/boder_item"
    >
    <ImageView
        android:background="@drawable/boder_item"
        android:id="@+id/img_item_member_ava"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="3"
        android:layout_margin="2dp"
        android:src="@drawable/ic_danit"
        />
    <TextView
        android:id="@+id/tv_item_member_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:text="@string/tv_item_member_nameMember"
        android:textSize="20sp"
        android:textColor="#000A55"
        android:layout_marginLeft="16dp"
        />


</LinearLayout>