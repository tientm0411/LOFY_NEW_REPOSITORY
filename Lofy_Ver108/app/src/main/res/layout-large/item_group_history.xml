<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:padding="4dp"
    android:background="@drawable/boder_item"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="40px"
            android:layout_weight=".1"
            android:src="@drawable/ic_logo_siple"

            />

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tv_it_history_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:text="NGAY_Di-NGAY_KET_THUC"
            android:textStyle="italic|bold"
            android:textColor="#000000"
            android:textSize="12sp"
            />

        <ImageView
            android:id="@+id/iv_it_history_delete"
            android:layout_width="0dp"
            android:layout_height="50px"
            android:layout_weight=".1"
            android:src="@drawable/ic_deny"
            android:layout_marginTop="8dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_it_history_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="GROUP_NAME"
            android:textColor="@color/fontColor"
            android:textStyle="italic|bold"
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            />

        <TextView
            android:id="@+id/tv_it_history_track"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="LO_TRINH"
            android:textStyle="italic|bold"
            android:textColor="#192e2f"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"

            />
    </LinearLayout>


</LinearLayout>